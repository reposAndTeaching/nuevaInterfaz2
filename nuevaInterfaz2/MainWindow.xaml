<Window x:Class="nuevaInterfaz2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:nuevaInterfaz2"
        mc:Ignorable="d"
        Title="Registro" Height="320" Width="560">
    <Grid>
        <Label x:Name="labelNombre" Content="Nombre: " HorizontalAlignment="Left" Margin="0,41,0,0" VerticalAlignment="Top" Height="26" Width="60"/>
        <Button x:Name="buttonRegistrar" Content="Registrar!" HorizontalAlignment="Left" Margin="50,109,0,0" VerticalAlignment="Top" Width="75" Click="buttonRegistrar_Click" IsEnabled="False"/>
        <TextBox x:Name="textBoxNombre" HorizontalAlignment="Left" Height="22" Margin="70,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="129" Cursor="" TextChanged="textBoxAll_TextChanged"/>
        <Label x:Name="labelRut" Content="Rut: " HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="60"/>
        <Label x:Name="labelEdad" Content="Edad: " HorizontalAlignment="Left" Margin="10,68,0,0" VerticalAlignment="Top" Width="60"/>
        <TextBox x:Name="textBoxRut" HorizontalAlignment="Left" Height="22" Margin="70,14,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="129" Cursor="" TextChanged="textBoxAll_TextChanged"/>
        <TextBox x:Name="textBoxEdad" HorizontalAlignment="Left" Height="22" Margin="70,68,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="129" Cursor="" PreviewTextInput="textBoxEdad_PreviewTextInput" TextChanged="textBoxAll_TextChanged"/>
        <ListBox x:Name="listBoxPersonas" HorizontalAlignment="Left" Height="265" Margin="328,10,0,0" VerticalAlignment="Top" Width="214" />
        <Button x:Name="buttonBuscar" Content="Buscar" HorizontalAlignment="Left" Margin="224,14,0,0" VerticalAlignment="Top" Width="75" Click="buttonBuscar_Click"/>
        <Button x:Name="buttonEditar" Content="Editar" HorizontalAlignment="Left" Margin="130,109,0,0" VerticalAlignment="Top" Width="75" Click="buttonEditar_Click"/>
    </Grid>
</Window>
